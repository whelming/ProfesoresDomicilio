<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio_cardview_alumnos"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp"
    card_view:cardBackgroundColor="@color/colorPrimaryAlpha"
    card_view:cardCornerRadius="80dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        >
        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="122dp"
            android:text="Nombre de Materia"
            android:textAlignment="center"
            android:textColor="#454444"
            android:textStyle="bold" />

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/foto_materia_normal"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/matematica"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
